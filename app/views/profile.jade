doctype html
html
  head
    title Profile
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(src='https://use.fontawesome.com/e5cb7ed628.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    style(type='text/css').
     *{
            box-sizing: border-box;
      }
      .container{
      word-wrap:break-word;
      }
  body
    .container
      .page-header.text-center
        h1
          span.fa.fa-anchor
          | Profile
        a.btn.btn-default(href='/logout') Logout
      .row
        .col-lg-6.well
          h1
            span.fa.fa-user
            | Facebook Profile Details
          p
            strong id !{user.facebook.id}
            br
            strong email !{user.facebook.email}
            br
            strong token !{user.facebook.token}
            br
            strong name !{user.facebook.name}
